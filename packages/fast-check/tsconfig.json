{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": false,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "outDir": "lib/",
    "skipLibCheck": true
  },
  "exclude": ["examples", "packages"]
}
