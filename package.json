{
  "private": true,
  "name": "@fast-check/monorepo",
  "description": "Test making sure fast-check expose the right typings",
  "type": "module",
  "packageManager": "pnpm@10.4.0+sha512.6b849d0787d97f8f4e1f03a9b8ff8f038e79e153d6f11ae539ae7c435ff9e796df6a862c991502695c7f9e8fac8aeafc1ac5a8dab47e36148d183832d886dd52",
  "workspaces": [
    ".github/actions/*",
    "examples",
    "packages/*",
    "website"
  ],
  "scripts": {
    "contributor:add": "all-contributors add",
    "build:all": "pnpm --filter {./packages/**} run build",
    "build-ci:all": "pnpm --filter {./packages/**} run build-ci",
    "test:all": "pnpm --filter {**} --parallel run test && pnpm --filter {**} --parallel run e2e",
    "typecheck:all": "pnpm --filter {**} --parallel run typecheck",
    "format": "prettier --cache --write .",
    "format:check": "prettier --list-different .",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "publint:all": "pnpm --filter {**} --parallel exec publint --strict",
    "bump": "changeset",
    "pack:all": "pnpm --filter {./packages/**} --parallel exec pnpm pack --out package.tgz",
    "unpack:all": "pnpm --filter {./packages/**} --parallel exec tar -xf package.tgz --strip-components=1 --exclude='package/package.json'"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.20.0",
    "@fast-check/packaged": "*",
    "@typescript-eslint/utils": "^8.24.0",
    "all-contributors-cli": "^6.26.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.15.0",
    "pkg-pr-new": "^0.0.39",
    "prettier": "3.5.1",
    "publint": "^0.3.5",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.24.0"
  }
}
