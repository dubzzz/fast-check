{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "commitMessagePrefix": "⬆️ ",
  "packageRules": [
    {
      "matchPaths": ["**/package.json"],
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "replace"
    },
    {
      "matchPaths": ["**/package.json"],
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchPaths": ["**/!(package.json)"],
      "rangeStrategy": "bump"
    }
  ]
}
