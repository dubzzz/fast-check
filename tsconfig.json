{
    "compilerOptions": {
        "declaration": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "target": "es3",
        "lib": [
            "esnext"
        ],
        "outDir": "lib/",
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "example",
        "node_modules",
        "**/*.spec.ts"
    ]
}
