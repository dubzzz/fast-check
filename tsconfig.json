{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": false,
        "incremental": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "lib": ["es2017", "es2019.Symbol"],
        "module": "commonjs",
        "target": "es2017",
        "outDir": "lib/",
    },
    "exclude": [
        "example",
        "test/esm",
        "test/legacy",
        "test/type"
    ]
}
