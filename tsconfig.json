{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": false,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "outDir": "lib/"
  },
  "exclude": ["example", "test/esm", "test/legacy", "test/type"]
}
