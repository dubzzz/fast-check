{
    "compilerOptions": {
        "incremental": true,
        "declaration": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "module": "commonjs",
        "target": "es3",
        "lib": [
            "esnext"
        ],
        "outDir": "lib/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "example",
        "node_modules",
        "**/*.spec.ts"
    ]
}
