{
  "compilerOptions": {
    "noEmit": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "incremental": false,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "importHelpers": false,
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleDetection": "force",
    "isolatedModules": true
  }
}
